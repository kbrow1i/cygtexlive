NAME="texlive-collection-langcyrillic"
VERSION=20140523
RELEASE=1

TEXLIVE_TEXMF_PKGS="babel-bulgarian babel-russian babel-serbian
	babel-serbianc babel-ukraineb cmcyr cyrillic cyrplain disser
	eskd eskdx gost lcyw lh lhcyr mongolian-babel montex russ
	serbian-apostrophe serbian-date-lat serbian-def-cyr
	serbian-lig t2"

# I'm omitting ruhyphen and ukrhyph; see the comment in
# texlive-collection-basic.cygport.

TEXLIVE_ARCH_PKGS="cyrillic-bin"

TEXLIVE_DOC_PKGS="babel-bulgarian babel-russian babel-serbian
	babel-serbianc babel-ukraineb cyrillic-bin cmcyr cyrillic
	disser eskd eskdx gost lcyw lh lshort-bulgarian lshort-mongol
	lshort-russian lshort-ukr mongolian-babel montex mpman-ru
	pst-eucl-translation-bg russ serbian-apostrophe
	serbian-date-lat serbian-def-cyr serbian-lig t2 texlive-ru
	texlive-sr ukrhyph"

REQUIRES="texlive-collection-latex"

inherit texlive

# doc only: lshort-bulgarian lshort-mongol lshort-russian lshort-ukr mpman-ru pst-eucl-translation-bg texlive-ru texlive-sr

src_install() {
	cd ${S}
	texlive_install
	cd ${C}
	cat > texlive-collection-langcyrillic.postinstall <<-_EOF
		/etc/texmf/web2c/20140523-1-update_fmtutil_cnf
		_EOF
}
