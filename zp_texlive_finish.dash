#! /bin/dash

markerdir=/var/lib/texmf/postinstall

for f in ${markerdir}/*.map
do
    if [ -f ${f} ]
    then
	maps=$(cat ${markerdir}/*.map)
    fi
    break
done

if [ -n "${maps}" ]
then
    /usr/bin/updmap-sys --nohash --nomkmap ${maps}
    for f in ${markerdir}/*.map
    do
	mv -f ${f} ${f}.done
    done
    echo y | /usr/bin/updmap-sys --syncwithtrees
    /usr/bin/updmap-sys
fi
